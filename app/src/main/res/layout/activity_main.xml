<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/gepSziv1"
                android:src="@drawable/heart2"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/gepSziv2"
                android:src="@drawable/heart2"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/gepSziv3"
                android:src="@drawable/heart2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gép"
                android:textSize="35sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Játékos"
                android:textSize="35sp"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/felhasznaloSziv1"
                android:src="@drawable/heart2"/>
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/felhasznaloSziv2"
                android:src="@drawable/heart2"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/felhasznaloSziv3"
                android:src="@drawable/heart2"/>



        </LinearLayout>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:text="Döntetlenek száma: 0"
        android:id="@+id/text_eredmeny"
        android:textSize="35sp"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        />
            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:id="@+id/gep_tippKep"
                android:src="@drawable/rock"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A gép választása"
                android:layout_gravity="center"
                android:textSize="35sp"
                android:layout_marginBottom="50dp"
                />

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:src="@drawable/rock"
                android:id="@+id/felhasznalo_tippKep"

                />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A te választásod"
            android:layout_gravity="center"
            android:textSize="35sp"
            android:layout_marginBottom="25dp"
            />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <ImageView

                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/rock"
                android:id="@+id/btn_ko"
                />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/paper"
                android:id="@+id/btn_papir"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/scissors"
                android:id="@+id/btn_ollo"/>



        </LinearLayout>






        </LinearLayout>


















</RelativeLayout>